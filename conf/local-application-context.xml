<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:context="http://www.springframework.org/schema/context"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:mvc="http://www.springframework.org/schema/mvc"
   xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">
        
    <!-- 
        LOCAL: Run on development machine pointed to Synapse at localhost:8080.
        Most useful when you want to manipulate Synapse's database and test 
        the result.
     -->
    
    <import resource="application-context.xml"/>

    <bean id="synapseClient" class="org.sagebionetworks.client.SynapseClientImpl" scope="prototype">
        <constructor-arg index="0" value= "BRIDGE"/>
        <property name="repositoryEndpoint" value="http://localhost:8080/services-repository-develop-SNAPSHOT/repo/v1"/>
        <property name="authEndpoint" value="http://localhost:8080/services-repository-develop-SNAPSHOT/auth/v1"/>
        <property name="fileEndpoint" value="http://localhost:8080/services-repository-develop-SNAPSHOT/file/v1"/>
    </bean>
    
</beans>